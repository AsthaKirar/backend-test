<%- include("./partials/header.ejs")%>
  <div class="w-full min-h-screen bg-gray-100 flex items-center justify-center">
    <div class="bg-white p-8 rounded-lg shadow-md w-full mb-[10vw] max-w-md">
      <h2 class="text-2xl font-bold mb-6 text-center">Create file mangement system</h2>
      <form action="/notes" method="get" class="space-y-4">
        <div>
          <label for="fileName" class="block text-sm font-medium text-gray-700 mb-1">File Name</label>
          <input type="text" name="fileName" placeholder="Enter file name"
            class="w-full px-3 py-2 border text-xl text-medium rounded-md outline-none">
        </div>
        <div>
          <label for="noteContent" class="block text-sm font-medium text-gray-700 mb-1">Note Content</label>
          <textarea name="filedata" rows="6" placeholder="Enter your note here"
            class="w-full resize-none px-3 py-2 border border-gray-300 rounded-md outline-none"></textarea>
        </div>
        <div>
          <label for="noteDate" class="block text-sm font-medium text-gray-700 mb-1">Date</label>
          <input type="date" name="noteDate"
            class="w-full px-3 py-2 border text-xl text-medium rounded-md outline-none">
        </div>
        <button type="submit"
          class="w-full bg-blue-500 text-white py-2 px-4 rounded-md">
          Create
        </button>
      </form>
    </div>
  </div>